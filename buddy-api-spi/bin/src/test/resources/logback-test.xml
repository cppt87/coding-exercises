<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%-5level] %-40.40logger{39} : %msg%n</pattern>
        </encoder>
    </appender>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
    <logger name="com.buddybank" level="DEBUG"/>
    <!-- suppress exception logging -->
    <logger name="eu.unicredit.giso.union.restlet.BuddyServerResource" level="OFF"/>
</configuration>
